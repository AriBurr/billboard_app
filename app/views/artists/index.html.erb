<%= render 'shared/nav' %>

<div class="ui container">

  <h1>All Artists</h1>
  <% if @artists.any? %>

    <%= will_paginate %><br>

    <% @artists.each do |artist| %>
      <%= link_to artist.name, artist_path(artist.id) %>
      <hr>
    <% end %>

  <% end %>

  <br>

  <div class="action-buttons">
    <%= link_to 'Create New Artist', new_artist_path, class: 'ui teal basic button' %>
  </div>

</div>
