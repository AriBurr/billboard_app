<%= render 'shared/nav' %>

<div class="ui container">

  <h1>Billboard Charts&ensp;<%= link_to 'Create New Billboard', new_billboard_path, class: 'ui green button' %></h1>
  <div class="ui divider"></div>

    <table class="ui striped celled table">
      <thead>
        <tr>
          <th class="center aligned">Name</th>
          <th class="center aligned">No. of Songs</th>
        </tr>
      </thead>
      <tbody>
        <% @billboards.each do |billboard| %>
        <tr>
          <td class="center aligned"><strong><%= link_to billboard.name, billboard_path(billboard.id), class: 'ui teal basic button' %></strong></td>
          <td class="center aligned"><%= billboard.songs.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

</div>
